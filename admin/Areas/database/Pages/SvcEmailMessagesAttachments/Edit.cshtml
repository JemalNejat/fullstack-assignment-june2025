@page
@model ADMIN.ITEGAMAX._4._0.Areas.database.Pages.SvcEmailMessagesAttachments.EditModel
@{
    ViewData["Title"] = "svc_email_messages_attachments";
}

<!-- Page Header -->
<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <h4 class="mb-0">Datatabell: @ViewData["Title"]</h4>
        <p class="mb-0 text-muted">Den här sidan används för att redigera en e-postbilaga.</p>
    </div>
    <div class="main-dashboard-header-right col-xl-3 col-lg-7 w-50">
        <div>
            <label class="fs-13 text-muted">Antal Visningar:</label>
            <div class="main-star">
                <span>(@Model.EmailAttachment.ViewCount)</span>
            </div>
        </div>
        <div>
            <label class="fs-13 text-muted">Skapad:</label>
            <h6 class="mb-0 fw-semibold">@Model.EmailAttachment.EmssgAttachCreated?.ToString("M/d/yyyy hh:mm:ss tt")</h6>
        </div>
        <div>
            <label class="fs-13 text-muted">Uppdaterad:</label>
            <h6 class="mb-0 fw-semibold">@Model.EmailAttachment.EmssgAttachUpdatedDate?.ToString("M/d/yyyy hh:mm:ss tt")</h6>
        </div>
    </div>
</div>



<div class="col-xl-3 col-lg-7 w-100">
    <div class="card">
        <div class="card-body">
            <div class="d-flex gap-2 mb-3">
                <button type="button" class="btn btn-primary" onclick="window.location.href='/database/SvcEmailMessagesAttachments'">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list-columns-reverse" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M0 .5A.5.5 0 0 1 .5 0h2a.5.5 0 0 1 0 1h-2A.5.5 0 0 1 0 .5m4 0a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10A.5.5 0 0 1 4 .5m-4 2A.5.5 0 0 1 .5 2h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 4h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 6h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1h-8a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 8h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1h-8a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5" />
                    </svg>
                    Till listan
                </button>

                <button type="button" class="btn btn-purple" onclick="window.location.href='/database/SvcEmailMessagesAttachments/View?id=@Model.EmailAttachment.EmssgAttachId'">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-view-list" viewBox="0 0 16 16">
                        <path d="M3 4.5h10a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-3a2 2 0 0 1 2-2m0 1a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1zM1 2a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 0 1h-13A.5.5 0 0 1 1 2m0 12a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 0 1h-13A.5.5 0 0 1 1 14" />
                    </svg>
                    Sidans innehåll
                </button>

                <button type="button" class="btn btn-success" onclick="window.location.href='/database/SvcEmailMessagesAttachments/New?id=@Model.EmailAttachment.EmssgAttachId'">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus" viewBox="0 0 16 16">
                        <path d="M8 6.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 .5-.5" />
                        <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5z" />
                    </svg>
                    Lägg till SvcEmailMessagesAttachments
                </button>

                <form method="post" asp-page-handler="Delete">
                    <input type="hidden" name="id" value="@Model.EmailAttachment.EmssgAttachId" />
                    <button type="submit" class="btn btn-outline-danger">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-minus" viewBox="0 0 16 16">
                            <path d="M8 6.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 .5-.5" />
                            <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5z" />
                        </svg>
                        Ta bort SvcEmailMessagesAttachments
                    </button>
                </form>

            </div>
            <hr class="mt-2 mb-4" />


            <form class="form-horizontal" method="post">
                <div class="mb-4 mt-3 main-content-label">Bilaga Information</div>

                <!-- Bilaga ID -->
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Bilaga ID:</label>
                        </div>
                        <div class="col-md-10">
                            <input type="text" class="form-control" asp-for="EmailAttachment.EmssgAttachId" readonly />
                        </div>
                    </div>
                </div>

                <!-- E-post ID -->
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">E-post ID:</label>
                        </div>
                        <div class="col-md-10">
                            <input type="text" class="form-control" asp-for="EmailAttachment.EmssgId" required />
                            <span asp-validation-for="EmailAttachment.EmssgId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Filnamn -->
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Filnamn:</label>
                        </div>
                        <div class="col-md-10">
                            <input type="text" class="form-control" asp-for="EmailAttachment.EmssgAttachFileName" required />
                            <span asp-validation-for="EmailAttachment.EmssgAttachFileName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Nedladdningslänk -->
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Nedladdningslänk:</label>
                        </div>
                        <div class="col-md-10">
                            <input type="text" class="form-control" asp-for="EmailAttachment.EmssgAttachDownloadUrl" />
                            <span asp-validation-for="EmailAttachment.EmssgAttachDownloadUrl" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Filtyp -->
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Filtyp:</label>
                        </div>
                        <div class="col-md-10">
                            <input type="text" class="form-control" asp-for="EmailAttachment.EmssgAttachFileType" required />
                            <span asp-validation-for="EmailAttachment.EmssgAttachFileType" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Status -->
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Status:</label>
                        </div>
                        <div class="col-md-10">
                            <select class="form-control" asp-for="EmailAttachment.EmssgAttachSend" required>
                                <option value="1">Inaktiv</option>
                                <option value="2">Dold</option>
                                <option value="3">Aktiv</option>
                            </select>
                            <span asp-validation-for="EmailAttachment.EmssgAttachSend" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Hidden Fields -->
                <input type="hidden" asp-for="EmailAttachment.EmssgAttachId" />

                <div class="card-footer pb-0">
                    <input type="submit" class="btn btn-primary waves-effect waves-light" value="Spara ändringar " />
                    <a asp-page="./Index" class="btn btn-secondary">Avbryt</a>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
