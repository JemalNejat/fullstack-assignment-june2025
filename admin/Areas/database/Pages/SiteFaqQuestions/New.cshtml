@page
@model ADMIN.ITEGAMAX._4._0.Areas.database.Pages.SiteFaqQuestions.NewModel
@{
    ViewData["Title"] = "st_faq_question";
}

<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <h4 class="mb-0">Datatabell: @ViewData["Title"]</h4>
        <p class="mb-0 text-muted">Den här sidan används för att skapa en ny FAQ-fråga.</p>
    </div>
    <p>
        <a asp-page="index" class="btn btn-success waves-effect waves-light">Tillbaka</a>
    </p>
</div>

<div class="col-xl-3 col-lg-7 w-100">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-column">
                <h5 class="mb-0 main-content-label">Skapa FAQ-Fråga</h5>
                <hr class="mt-2 mb-4" />
            </div>
            <form class="form-horizontal" method="post">
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Fråga:* </label>
                        </div>
                        <div class="col-md-10">
                            <input type="text" class="form-control" asp-for="stFaqQuestions!.StFaqQuestion" placeholder="Ange fråga">
                            <span asp-validation-for="stFaqQuestions!.StFaqQuestion" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Svar:* </label>
                        </div>
                        <div class="col-md-10">
                            <textarea asp-for="stFaqQuestions!.StFaqAnswer" class="form-control" placeholder="Ange svar"></textarea>
                            <span asp-validation-for="stFaqQuestions!.StFaqAnswer" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Kategori Id: </label>
                        </div>
                        <div class="col-md-10">
                            <input type="number" class="form-control" asp-for="stFaqQuestions!.StFaqCategoryid" required min="1" max="6" placeholder="Ange kategori-id">
                            <span asp-validation-for="stFaqQuestions!.StFaqCategoryid" class="text-danger"></span>
                        </div>
                    </div>
                </div>

               @*  <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Fråga Status: </label>
                        </div>
                        <div class="col-md-10">
                            <input type="number" class="form-control" asp-for="stFaqQuestions!.StFaqQuesAnsStatus" required min="1" max="3" placeholder="Ange status">
                            <span asp-validation-for="stFaqQuestions!.StFaqQuesAnsStatus" class="text-danger"></span>
                        </div>
                    </div>
                </div> *@
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Fråga Status:</label>
                        </div>
                        <div class="col-md-10">
                            <select class="form-control" asp-for="stFaqQuestions!.StFaqQuesAnsStatus" required>
                                <option value="1">Inaktiv</option>
                                <option value="2">Dold</option>
                                <option value="3" selected>Aktiv</option>
                            </select>
                            <span asp-validation-for="stFaqQuestions!.StFaqQuesAnsStatus" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <input asp-for="stFaqQuestions!.StFaqQuesAnsCreateddate" type="hidden" value="@DateTime.Now" />
                <input asp-for="stFaqQuestions!.StFaqQuesAnsUpdateddate" type="hidden" value="@DateTime.Now" />
                <input asp-for="stFaqQuestions!.Viewcount" type="hidden" value="0" />

                <div class="card-footer pb-0">
                    <input type="submit" class="btn btn-primary waves-effect waves-light" value="Lägg till" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
