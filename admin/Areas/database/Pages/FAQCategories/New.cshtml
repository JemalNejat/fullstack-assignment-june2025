@page
@model ADMIN.ITEGAMAX._4._0.Areas.database.Pages.FAQCategories.NewModel
@{
}
@{
    ViewData["Title"] = "st_faq_categories";
}


<!-- Page Header -->
<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <h4 class="mb-0">Skapa FAQ-kategori: @ViewData["Title"]</h4>
        <p class="mb-0 text-muted">Den här sidan används för att lägga till en ny FAQ-kategorier.</p>
        <p class="mb-0 text-muted"></p>
    </div>
    
</div>

<div class="col-xl-3 col-lg-7 w-100">
    <div class="card">
        <div class="card-body">
            <div class="d-flex gap-2 mb-3">
                <button type="button" class="btn btn-primary" onclick="window.location.href='/database/FAQCategories'">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list-columns-reverse" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M0 .5A.5.5 0 0 1 .5 0h2a.5.5 0 0 1 0 1h-2A.5.5 0 0 1 0 .5m4 0a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10A.5.5 0 0 1 4 .5m-4 2A.5.5 0 0 1 .5 2h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 4h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 6h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1h-8a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 8h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1h-8a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5" />
                    </svg>
                    Till listan
                </button>

            </div>
            <hr class="mt-2 mb-4" />
           
           
            <form class="form-horizontal" method="post">
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0"> </label>
                            <span class="form-text"></span>
                        </div>
                        <div class="col-md-10">
                            <input type="number" asp-for="StFaqCategory.StFaqAreaId" class="form-control" required min="1" max="1000" placeholder="Ange FAQ-område" />
                            <span asp-validation-for="StFaqCategory.StFaqAreaId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Namn:* </label>
                            <span class="form-text"></span>
                        </div>
                        <div class="col-md-10">
                            <input type="text" asp-for="StFaqCategory.StFaqCategoryName" class="form-control" required minlength="5" maxlength="55" placeholder="Ange namn" />
                            <span asp-validation-for="StFaqCategory.StFaqCategoryName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Beskrivning:</label>
                        </div>
                        <div class="col-md-10">
                            <textarea data-val-maxlength-max="255" asp-for="StFaqCategory.StFaqCategoryDescription" class="form-control" rows="5" placeholder="Ange beskrivning"></textarea>
                            <span asp-validation-for="StFaqCategory.StFaqCategoryDescription" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <input type="hidden" asp-for="StFaqCategory.StFaqCreatedDate" value="@DateTime.Now" />
                <input type="hidden" asp-for="StFaqCategory.StFaqUpdatedDate" value="@DateTime.Now" />
                <input name="Viewcount" type="hidden" value="0" />

                <div class="card-footer pb-0">
                    <input type="submit" class="btn btn-primary waves-effect waves-light" value="Lägg till" />
                    <a asp-page="./Index" class="btn btn-secondary">Avbryt</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}