@page
@model ADMIN.ITEGAMAX._4._0.Areas.database.Pages.FAQCategories.IndexModel
@{
    ViewData["Title"] = "st_faq_categories";
}

<!-- Page Header -->
<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <h4 class="mb-0">Datatabell: @ViewData["Title"]</h4>
        <p class="mb-0 text-muted">Denna sida innehåller alla FAQ-kategorier nedan</p>
    </div>
    <div class="main-dashboard-header-right">
        <div>
            <label class="fs-13 text-muted">Totalt antal</label>
            <h5 class="mb-0 fw-semibold">@Model.TotalItems</h5>
        </div>
    </div>
</div>

<!-- Database Table -->
<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-body">
                <div class="table-responsive">
                    <a asp-page="./New" id="addRow" class="btn btn-primary mb-2 p-2">Lägg till post</a>
                    <table id="datatable-basic" class="table border table-bordered text-nowrap w-100">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Namn</th>
                                <th>Område</th>
                                <th>Visningar</th>
                                <th>Status</th>
                                <th class="th-center-45">Visa</th>
                                <th class="th-center-45">Redigera</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.stfaqcategories != null && Model.stfaqcategories.Any())
                            {
                                @foreach (var item in Model.stfaqcategories)
                                {
                                    <tr>
                                        <td>
                                            <a asp-page="./View" asp-route-id="@item.StFaqCategoryId" class="text-dark text-decoration-none">
                                                @item.StFaqCategoryId
                                            </a>
                                        </td>
                                        <td>@item.StFaqCategoryName</td>
                                        <td>@item.StFaqAreaId</td>
                                        <td>@item.Viewcount</td>
                                        <td>
                                            @switch (item.StFaqCategoryStatus)
                                            {
                                                case 2:
                                                    <span class="fw-bold text-danger d-flex justify-content-center">
                                                        <i class="ri-error-warning-line me-1"></i> Dold
                                                    </span>
                                                    break;
                                                case 3:
                                                    <span class="fw-bold text-success d-flex justify-content-center">
                                                        <i class="ri-check-line me-1"></i> Aktiv
                                                    </span>
                                                    break;
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a role="button" class="ri-eye-line cursor-pointer" asp-page="./View" asp-route-id="@item.StFaqCategoryId"></a>
                                        </td>
                                        <td class="text-center">
                                            <a role="button" class="ri-edit-box-line cursor-pointer" asp-page="./Edit" asp-route-id="@item.StFaqCategoryId"></a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted">Inga kategorier hittades.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
