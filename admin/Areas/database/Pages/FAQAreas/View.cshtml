@page
@model ADMIN.ITEGAMAX._4._0.Areas.database.Pages.FAQAreas.ViewModel
@{
    ViewData["Title"] = "st_faq_area";
}

<!-- Page Header -->
<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <h4 class="mb-0">Datatabell: @ViewData["Title"]</h4>
        <p class="mb-0 text-muted">Den här sidan används för att visa ett FAQ-område.</p>
    </div>
    <div class="main-dashboard-header-right col-xl-3 col-lg-7 w-50">
        <div>
            <label class="fs-13 text-muted">Antal Visningar:</label>
            <div class="main-star">
                <span>(@Model.StFaqArea.Viewcount)</span>
            </div>
        </div>
        <div>
            <label class="fs-13 text-muted">Skapad:</label>
            <h6 class="mb-0 fw-semibold">@Model.StFaqArea.StFaqCreatedDate?.ToString("M/d/yyyy hh:mm:ss tt")</h6>
        </div>
        <div>
            <label class="fs-13 text-muted">Uppdaterad:</label>
            <h6 class="mb-0 fw-semibold">@Model.StFaqArea.StFaqUpdatedDate?.ToString("M/d/yyyy hh:mm:ss tt")</h6>
        </div>
    </div>
</div>

<div class="d-flex gap-2 mb-3">
    <button type="button" class="btn btn-primary" onclick="window.location.href='/database/FAQAreas'">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list-columns-reverse" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M0 .5A.5.5 0 0 1 .5 0h2a.5.5 0 0 1 0 1h-2A.5.5 0 0 1 0 .5m4 0a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10A.5.5 0 0 1 4 .5m-4 2A.5.5 0 0 1 .5 2h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 4h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 6h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1h-8a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 8h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1h-8a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5" />
        </svg>
        Till listan
    </button>

    <button type="button" class="btn btn-purple" onclick="window.location.href='/database/FAQAreas/Edit?id=@Model.StFaqArea.StFaqAreaId'">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
        </svg>
        Redigera FAQ Område
    </button>

    <form method="post" asp-page-handler="Delete">
        <input type="hidden" name="id" value="@Model.StFaqArea.StFaqAreaId" />
        <button type="submit" class="btn btn-outline-danger">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-minus" viewBox="0 0 16 16">
                <path d="M8 6.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 .5-.5" />
                <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5z" />
            </svg>
            Ta bort FAQ Område
        </button>
    </form>
</div>

<!-- FAQ Area Details -->
<div class="col-xl-6 col-lg-8 w-100">
    <div class="card">
        <div class="card-body">
          
            <hr class="mt-1 mb-2" />
            <div class="form-group mb-3">
                <label class="form-label">Namn:</label>
                <p class="form-control-plaintext">@Model.StFaqArea.StFaqAreaName</p>
            </div>
            <div class="form-group mb-3">
                <label class="form-label">Beskrivning:</label>
                <p class="form-control-plaintext">@Model.StFaqArea.StFaqAreaDescription</p>
            </div>
            <div class="form-group mb-3">
                <label class="form-label">Status:</label>
                <p class="form-control-plaintext">
                    @switch (Model.StFaqArea.StFaqAreaStatus)
                    {
                        case 1:
                            <span class="text-warning">Raderad</span>
                            break;
                        case 2:
                            <span class="text-danger">Inaktiv</span>
                            break;
                        case 3:
                            <span class="text-success">Aktiv</span>
                            break;
                        default:
                            <span class="text-muted">Okänd status</span>
                            break;
                    }
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
