@page
@model ADMIN.ITEGAMAX._4._0.Areas.database.Pages.SyStatuses.IndexModel
@{
    ViewData["Title"] = "sy_statuses";
}

<!-- Page Header -->
<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <h4 class="mb-0">Datatabell: @ViewData["Title"]</h4>
        <p class="mb-0 text-muted">Denna sida innehåller alla rader i tabellen nedan</p>
    </div>
    <div class="main-dashboard-header-right">
        <div>
            <label class="fs-13 text-muted">Totalt antal</label>
            <h5 class="mb-0 fw-semibold">@Model.TotalItems</h5>
        </div>
    </div>
</div>

<!-- Database Table -->
<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-body">
                <div class="table-responsive">
                    <a asp-page="./New" id="addRow" class="btn btn-primary mb-2  mb-1 p-2">Lägg till post</a>
                    <table id="datatable-basic" class="table border table-bordered text-nowrap w-100">
                        <thead>
                            <tr>
                                <th>
                                    <a>
                                        ID
                                    </a>
                                </th>
                                <th>
                                    <a>
                                        Status
                                    </a>
                                </th>
                                <th class="th-center-45">Redigera</th>
                                <th class="th-center-45">Radera</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.SyStatuses != null && Model.SyStatuses.Any())
                            {
                                @foreach (var status in Model.SyStatuses)
                                {
                                    <tr>
                                        <td>@status.id</td>
                                        <td>@status.Status</td>
                                        <td class="text-center">
                                            <a role="button" class="ri-edit-box-line cursor-pointer" asp-page="./Edit" asp-route-id="@status.id"></a>
                                        </td>
                                        <td class="text-center">
                                            <a role="button" class="ri-delete-bin-6-line cursor-pointer" asp-page="./delete" asp-route-id="@status.id"></a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted">Inga statusar hittades.</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
