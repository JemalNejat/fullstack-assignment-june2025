<script>
    (function () {
        // var urls = ['1', '2', '3', '4', '5', '6'];
        function swap() {
            const urls = document.getElementById('theImageSlide').getAttribute('imagedata').split(",");
            var imgpth = document.getElementById('theImageSlide').getAttribute('imagepath');
            document.getElementById('theImageSlide').setAttribute('src', imgpth + urls[Math.round(Math.random() * urls.length)] + '.png');
        }

        // Mozilla, Opera and webkit nightlies currently support this event
        if (document.addEventListener) {
            window.addEventListener('load', swap, false);
            // If IE event model is used
        } else if (document.attachEvent) {
            window.attachEvent('onload', swap);
        }
    })();
</script>