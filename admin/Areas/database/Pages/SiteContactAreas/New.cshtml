@page
@model ADMIN.ITEGAMAX._4._0.Areas.database.Pages.SiteContactAreas.NewModel
@{
	ViewData["Title"] = "st_contact_area";
}

<!-- Page Header -->
<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
	<div>
		<h4 class="mb-0">Datatabell: @ViewData["Title"]</h4>
		<p class="mb-0 text-muted">Den här sidan används för att lägga till ett nytt kontaktområde.</p>
	</div>
	
</div>


<div class="col-xl-3 col-lg-7 w-100">
	<div class="card">
		<div class="card-body">
			<div class="d-flex gap-2 mb-3">

				<button type="button" class="btn btn-primary" onclick="window.location.href='/database/SiteContactAreas'">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list-columns-reverse" viewBox="0 0 16 16">
						<path fill-rule="evenodd" d="M0 .5A.5.5 0 0 1 .5 0h2a.5.5 0 0 1 0 1h-2A.5.5 0 0 1 0 .5m4 0a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10A.5.5 0 0 1 4 .5m-4 2A.5.5 0 0 1 .5 2h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 4h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 6h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1h-8a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 8h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1h-8a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5" />
					</svg>
					Till listan
				</button>

			</div>
				<hr class="mt-2 mb-4" />
		
			<form class="form-horizontal" method="post">
				<div class="form-group mb-3">
					<div class="row">
						<div class="col-md-2 d-flex align-items-center">
							<label class="form-label mb-0">Namn:</label>
						</div>
						<div class="col-md-10">
							<input type="text" class="form-control" asp-for="StContactArea.StContactAreaName" required placeholder="Ange kontaktområde">
							<span asp-validation-for="StContactArea.StContactAreaName" class="text-danger"></span>
						</div>
					</div>
				</div>

				<div class="form-group mb-3">
					<div class="row">
						<div class="col-md-2 d-flex align-items-center">
							<label class="form-label mb-0">Status:</label>
						</div>
						<div class="col-md-10">
							<select class="form-control" asp-for="StContactArea.StContactAreaStatus" required>
								<option value="1">Inaktiv</option>
								<option value="2">Dold</option>
								<option value="3" selected>Aktiv</option>
							</select>
							<span asp-validation-for="StContactArea.StContactAreaStatus" class="text-danger"></span>
						</div>
					</div>
				</div>

				<div class="form-group mb-3">
					<div class="row">
						<div class="col-md-2 d-flex align-items-center">
							<label class="form-label mb-0">Position:</label>
						</div>
						<div class="col-md-10">
							<input type="number" class="form-control" asp-for="StContactArea.Position" placeholder="Ange position">
							<span asp-validation-for="StContactArea.Position" class="text-danger"></span>
						</div>
					</div>
				</div>
			

				<div class="card-footer pb-0">
					<input type="hidden" asp-for="StContactArea.StContactAreaId" />
					<input type="submit" class="btn btn-primary waves-effect waves-light" value="Lägg till" />
				</div>
			</form>

		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

