@page
@using Microsoft.AspNetCore.Http.Extensions
@model ADMIN.ITEGAMAX._4._0.Areas.database.Pages.SitePages.EditModel
@{
    Layout = "_LayoutCoreMedia";
    ViewData["Title"] = "st_pages";

    string requrlwithparam = Request.Scheme + "://" + Request.Host + Request.PathBase + Request.Path + Request.QueryString;
}

<!-- Page Header -->
<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <h4 class="mb-0">Redigera sida: @Model.EditPage.Pagetitle</h4>
        <p class="mb-0 text-muted">Den här sidan används för att visa en webbsida.</p>
    </div>
    <div class="main-dashboard-header-right col-xl-3 col-lg-7 w-50">
        <div>
            <label class="fs-13 text-muted">Antal Visningar:</label>
            <div class="main-star">
                <span>(@Model.EditPage.Viewcount)</span>
            </div>
        </div>
        <div>
            <label class="fs-13 text-muted">Updaterade</label>
            <h6 class="mb-0 fw-semibold">@(!string.IsNullOrEmpty(Model.EditPage.Pageupdateddate.ToString()) ? Model.EditPage.Pageupdateddate.ToString()!.Substring(0, 10) : "")</h6>
        </div>
        <div>
            <label class="fs-13 text-muted">Skapade</label>
            <h6 class="mb-0 fw-semibold">@(!string.IsNullOrEmpty(Model.EditPage.Pagecreateddate.ToString()) ? Model.EditPage.Pagecreateddate.ToString()!.Substring(0, 10) : "")</h6>
        </div>
    </div>
</div>

<div class="col-xl-3 col-lg-7 w-100">
    <div class="card">
        <div class="card-body">
            <div class="d-flex gap-2 mb-3">

                <button type="button" class="btn btn-primary" onclick="window.location.href='/database/sitepages'">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list-columns-reverse" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M0 .5A.5.5 0 0 1 .5 0h2a.5.5 0 0 1 0 1h-2A.5.5 0 0 1 0 .5m4 0a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10A.5.5 0 0 1 4 .5m-4 2A.5.5 0 0 1 .5 2h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 4h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 6h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1h-8a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 8h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1h-8a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5" />
                    </svg>
                    Till listan
                </button>

                <button type="button" class="btn btn-purple" onclick="window.location.href='/database/SitePages/View?id=@Model.EditPage.PageId'">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-view-list" viewBox="0 0 16 16">
                        <path d="M3 4.5h10a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-3a2 2 0 0 1 2-2m0 1a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1zM1 2a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 0 1h-13A.5.5 0 0 1 1 2m0 12a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 0 1h-13A.5.5 0 0 1 1 14" />
                    </svg>
                    Sidans innehåll
                </button>

                <button type="button" class="btn btn-success" onclick="window.location.href='/database/SitePages/addarticle?id=@Model.EditPage.PageId'">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus" viewBox="0 0 16 16">
                        <path d="M8 6.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 .5-.5" />
                        <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5z" />
                    </svg>
                    Lägg till artiklar
                </button>

                <button type="button" class="btn btn-success" onclick="window.location.href='/database/SitePages/addimage?id=@Model.EditPage.PageId'">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-image-fill" viewBox="0 0 16 16">
                        <path d="M.002 3a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-12a2 2 0 0 1-2-2zm1 9v1a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V9.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062zm5-6.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0"></path>
                    </svg>
                    Lägg till bilder
                </button>

                <button type="button" class="btn btn-outline-danger" onclick="window.location.href='/database/SitePages/deletearticle?id=@Model.EditPage.PageId'">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus" viewBox="0 0 16 16">
                        <path d="M8 6.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 .5-.5" />
                        <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5z" />
                    </svg>
                    Ta bort artiklar
                </button>

                <button type="button" class="btn btn-outline-danger" onclick="window.location.href='/database/SitePages/deleteimage?id=@Model.EditPage.PageId'">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-image-fill" viewBox="0 0 16 16">
                        <path d="M.002 3a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-12a2 2 0 0 1-2-2zm1 9v1a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V9.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062zm5-6.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0"></path>
                    </svg>
                    Ta bort bild
                </button>
            </div>
            <div class="row">
                <div class="col-xl-3 col-lg-7 w-50">
                    <form class="form-horizontal" method="post">
                        <input type="hidden" asp-for="EditPage.PageId" />

                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">Sidtitel:</label>
                                </div>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" asp-for="EditPage.Pagetitle" required placeholder="Ange sidtitel">
                                    <span asp-validation-for="EditPage.Pagetitle" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">Sidsubtitel:</label>
                                </div>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" asp-for="EditPage.Pagesubtitle"  placeholder="Ange sidsubtitel">
                                    <span asp-validation-for="EditPage.Pagesubtitle" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">Sid kortbeskrivning:</label>
                                </div>
                                <div class="col-md-10">
                                    <textarea data-val-maxlength-max="2000" asp-for="EditPage.Pageshortdescription" class="form-control" rows="3" placeholder="Ange sid kort beskrivning"></textarea>
                                    <span asp-validation-for="EditPage.Pagesubtitle" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">Område:</label>
                                </div>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" asp-for="EditPage.Pagemenuarea" required placeholder="Ange område">
                                    <span asp-validation-for="EditPage.Pagemenuarea" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">URL-sökväg:</label>
                                </div>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" asp-for="EditPage.Pageurlid" required placeholder="Ange URL">
                                    <span asp-validation-for="EditPage.Pageurlid" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">Typ:</label>
                                </div>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" asp-for="EditPage.Pagetype" required placeholder="Ange typ">
                                    <span asp-validation-for="EditPage.Pagetype" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">Kategory:</label>
                                </div>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" asp-for="EditPage.Pagetype" required placeholder="Ange typ">
                                    <span asp-validation-for="EditPage.Pagetype" class="text-danger"></span>

                                    <select class="form-control" asp-for="EditPage.Pagecategoryid">
                                        <option value="1">Area sida</option>
                                        <option value="2">Undersida</option>
                                        <option value="3">Service sida</option>
                                        <option value="4">Produktsida</option>
                                        <option value="5">Support</option>
                                    </select>
                                    <span asp-validation-for="EditPage.Pagestatus" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">Status:</label>
                                </div>
                                <div class="col-md-10">
                                    <select class="form-control" asp-for="EditPage.Pagestatus">
                                        <option value="1">Inaktiv</option>
                                        <option value="2">Dold</option>
                                        <option value="3">Aktiv</option>
                                    </select>
                                    <span asp-validation-for="EditPage.Pagestatus" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer pb-0">
                            <input type="hidden" asp-for="EditPage.Pagelayoutname" />
                            <input type="hidden" asp-for="EditPage.Pagetopbannerpic" />
                            <input type="hidden" asp-for="EditPage.Pagetopbannertitle" />
                            <input type="hidden" asp-for="EditPage.Pagetopbannersubtitle" />
                            <input type="hidden" asp-for="EditPage.Pagetopbannertext" />
                            <input type="hidden" asp-for="EditPage.Pagemediumbannerpic" />
                            <input type="hidden" asp-for="EditPage.Pagemediumbannertitle" />
                            <input type="hidden" asp-for="EditPage.Pagemediumbannersubtitle" />
                            <input type="hidden" asp-for="EditPage.Pagemediumbannertext" />
                            <input type="hidden" asp-for="EditPage.Pagesmallbannerpic" />
                            <input type="hidden" asp-for="EditPage.Pagesmallbannertitle" />
                            <input type="hidden" asp-for="EditPage.Pagesmallbannersubtitle" />
                            <input type="hidden" asp-for="EditPage.Pagesmallbannertext" />
                            <input type="hidden" asp-for="EditPage.Pagecreateddate" />
                            <input type="hidden" asp-for="EditPage.Viewcount" />
                            <input asp-for="EditPage.Pagemodifieddate" type="hidden" value="@DateTime.Now" />
                            <input asp-for="EditPage.Pageupdateddate" type="hidden" value="@DateTime.Now" />
                            <input type="submit" class="btn btn-primary waves-effect waves-light" value="Spara ändringar" />
                        </div>
                    </form>
                </div>
                <div class="col-xl-3 col-lg-7 w-50">
                    <form data-single="true" method="post" name="UploadImage"  enctype="multipart/form-data" class="dropzone">
                            <h6 class="mb-3">Sidbilder:</h6>
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="card custom-card">
                                        <div class="card-header">
                                            <div class="card-title">
                                                Select a PNG or JPEG image, having maximum size 500KB
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <input type="file" class="multiple-filepond" name="filepond" multiple data-allow-reorder="true" data-max-file-size="500KB" data-max-files="1">
                                        </div>
                                    </div>
                                </div>
                            </div>

                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">Välj Bildtype:</label>
                                </div>
                                <div class="col-md-10">
                                    <select class="form-control" name="imageType">
                                        <option value="1">Breadcrumb - Large (1920x1280px)</option>
                                        <option value="2">Page - Medium (900x600px)</option>
                                        <option value="3">List Pages - Small (600x400)</option>
                                    </select>
                                    <span asp-validation-for="EditPage.Pagestatus" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">Image Title:</label>
                                </div>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" name="iamgetitle">
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">Image Subtitle:</label>
                                </div>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" name="iamgesubtitle">
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">Image Text:</label>
                                </div>
                                <div class="col-md-10">
                                    <textarea data-val-maxlength-max="500" class="form-control" rows="3" name="iamgetext"></textarea>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" asp-for="EditPage.PageId" />
                        <input type="hidden" asp-for="EditPage.Pagetitle" />
                        <input type="hidden" asp-for="EditPage.Pagesubtitle" />
                        <input type="hidden" asp-for="EditPage.Pagemenuarea" />
                        <input type="hidden" asp-for="EditPage.Pageurlid" />
                        <input type="hidden" asp-for="EditPage.Pagestatus" />
                        <input type="hidden" asp-for="EditPage.Pagetype" />
                        <input type="hidden" asp-for="EditPage.Pagelayoutname" />
                        <input type="hidden" asp-for="EditPage.Pagecategoryid" />
                        <input type="hidden" asp-for="EditPage.Pagetopbannerpic" />
                        <input type="hidden" asp-for="EditPage.Pagetopbannertitle" />
                        <input type="hidden" asp-for="EditPage.Pagetopbannersubtitle" />
                        <input type="hidden" asp-for="EditPage.Pagetopbannertext" />
                        <input type="hidden" asp-for="EditPage.Pagemediumbannerpic" />
                        <input type="hidden" asp-for="EditPage.Pagemediumbannertitle" />
                        <input type="hidden" asp-for="EditPage.Pagemediumbannersubtitle" />
                        <input type="hidden" asp-for="EditPage.Pagemediumbannertext" />
                        <input type="hidden" asp-for="EditPage.Pagesmallbannerpic" />
                        <input type="hidden" asp-for="EditPage.Pagesmallbannertitle" />
                        <input type="hidden" asp-for="EditPage.Pagesmallbannersubtitle" />
                        <input type="hidden" asp-for="EditPage.Pagesmallbannertext" />
                        <input type="hidden" asp-for="EditPage.Pagecreateddate" />
                        <input type="hidden" asp-for="EditPage.Viewcount" />
                        <input asp-for="EditPage.Pagemodifieddate" type="hidden" value="@DateTime.Now" />
                        <input asp-for="EditPage.Pageupdateddate" type="hidden" value="@DateTime.Now" />
                        <button class="btn btn-primary waves-effect waves-light" name="upload-button" type="submit" value="Upload!">Ladda upp bild</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
