@page
@model ADMIN.ITEGAMAX._4._0.Areas.database.Pages.SiteNewsletterSubs.NewModel
@{
    ViewData["Title"] = "st_newsletter_subscribers";
}


<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <h4 class="mb-0">Datatabell: @ViewData["Title"]</h4>
        <p class="mb-0 text-muted">Den här sidan används för att skapa en ny tidning.</p>
    </div>
    <p>
        <a asp-page="index" class="btn btn-success waves-effect waves-light">Tillbaka</a>
    </p>
</div>

<div class="col-xl-3 col-lg-7 w-100">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-column">
                <h5 class="mb-0 main-content-label">Skapa Prenumerant</h5>
                <hr class="mt-2 mb-4" />
            </div>
            <form class="form-horizontal" method="post">
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Namn:* </label>
                        </div>
                        <div class="col-md-10">
                            <input type="text" class="form-control" asp-for="stnewslettersubscriber!.StNlSubscribersName" required placeholder="Ange namn" min="5" max="55">
                            <span asp-validation-for="stnewslettersubscriber!.StNlSubscribersName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">E-post:* </label>
                        </div>
                        <div class="col-md-10">
                            <input type="text" class="form-control" asp-for="stnewslettersubscriber!.StNlSubscribersEmail" required placeholder="Ange e-post" min="5" max="55">
                            <span asp-validation-for="stnewslettersubscriber!.StNlSubscribersEmail" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Telefon:</label>
                        </div>
                        <div class="col-md-10">
                            <input type="text" class="form-control" asp-for="stnewslettersubscriber!.StNlSubscribersPhone" placeholder="Ange telefonnummer" max="15">
                            <span asp-validation-for="stnewslettersubscriber!.StNlSubscribersPhone" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Område:</label>
                        </div>
                        <div class="col-md-10">
                            <input type="number" class="form-control" asp-for="stnewslettersubscriber!.StNlSubscribersStarea" required min="1" max="20" placeholder="Ange område">
                            <span asp-validation-for="stnewslettersubscriber!.StNlSubscribersStarea" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Företagstyp:</label>
                        </div>
                        <div class="col-md-10">
                            <input type="number" class="form-control" asp-for="stnewslettersubscriber!.StNlSubscribersComType" required min="1" max="20" placeholder="Ange företagstyp">
                            <span asp-validation-for="stnewslettersubscriber!.StNlSubscribersComType" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Avsluta:</label>
                        </div>
                        <div class="col-md-10">
                            <input type="number" class="form-control" asp-for="stnewslettersubscriber!.StNlSubscribersOpout" required min="0" max="2" placeholder="Ange avsluta">
                            <span asp-validation-for="stnewslettersubscriber!.StNlSubscribersOpout" class="text-danger"></span>
                        </div>
                    </div>
                </div>

            
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Status:</label>
                        </div>
                        <div class="col-md-10">
                            <select class="form-control" asp-for="stnewslettersubscriber!.StNlSubscribersStatus" required>
                                <option value="1">Inaktiv</option>
                                <option value="2">Dold</option>
                                <option value="3" selected>Aktiv</option>
                            </select>
                            <span asp-validation-for="stnewslettersubscriber!.StNlSubscribersStatus" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card-footer pb-0">
                    <input type="submit" class="btn btn-primary waves-effect waves-light" value="Lägg till" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
