@using SITE.ITEGAMAX._4._0._2.Models;
@{
    if (Model != null)
    {

        List<modSitePage> supportcorepages = Model;
        int pagec = 1;
        string imagespagedir = CLCustAppsettings.IMAGE_PAGES_PATH!;

        <!-- support-area -->
        <div class="blog-area py-100">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 mx-auto">
                        <div class="site-heading text-center wow fadeInDown" data-wow-delay=".25s">
                            <span class="site-title-tagline"><i class="fas fa-percent"></i> Hjälpcenter</span>

                            <h2 class="site-title">Få hjälp snabbt och <span>enkelt!</span></h2>
                            <p>Välkommen till vår supportcentral! Här hittar du information och vägledning för att lösa dina problem. Utforska våra FAQ-sidor, webbkarta eller kontakta oss direkt för att få den hjälp du behöver.</p>
                        </div>
                    </div>
                </div>
                <div class="row g-4">
                    @{
                        foreach (var item in supportcorepages)
                        {
                            <div class="col-md-6 col-lg-4">
                                <div class="blog-item wow fadeInUp" data-wow-delay=".25s">
                                    <div class="blog-item-img">
                                        <a href="@item.pageurlid">
                                            @{
                                                // LARGE IMGAGE: 1920x1280px
                                                // MEDIUM IMGAGE: 550x600px
                                                // SMALL IMGAGE: 600x400px
                                                if ((item.pagesmallbannerpic != null) && (!String.IsNullOrEmpty(item.pagesmallbannerpic)))
                                                {
                                                    <img src="@(imagespagedir + "/" +  item.pageurlid!.Replace("/","") + "/" + item.pagesmallbannerpic)" alt="@item.pagetitle" title="@item.pagetitle">
                                                }
                                                else
                                                {
                                                    <img src="~/assets/img/blog/01.jpg" alt="@item.pagetitle">
                                                }
                                            }
                                        </a>
                                        <div class="blog-date">
                                            <span>!</span>
                                            <strong>@pagec</strong>
                                        </div>
                                    </div>
                                    <div class="blog-item-info">
                                        <h4 class="blog-title">
                                            <a href="blog-single.html">@item.pagetitle</a>
                                        </h4>
                                        <p>
                                            @item.pagesubtitle
                                        </p>
                                        <a class="theme-btn" href="@item.pageurlid">Hitta din lösning här<i class="fas fa-arrow-right"></i></a>
                                    </div>
                                </div>
                            </div>
                            pagec++;
                        }
                    }

                </div>
            </div>
        </div>
        <!-- support-area end -->
    }
}