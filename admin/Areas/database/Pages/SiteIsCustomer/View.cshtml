@page
@model ADMIN.ITEGAMAX._4._0.Areas.database.Pages.SiteIsCustomer.ViewModel
@{
    ViewData["Title"] = "st_iscustomer";
}

<!-- Sidhuvud -->
<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <h4 class="mb-0">Visa Kund</h4>
        <p class="mb-0 text-muted">Den här sidan används för att visa kunddetaljer.</p>
    </div>
    <p>
        <a asp-page="Index" class="btn btn-success waves-effect waves-light">Tillbaka</a>
    </p>
</div>
<!-- Slut på Sidhuvud -->

<div class="col-xl-6 col-lg-8 w-100">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-column">
                <h4 class="mb-3 main-content-label fw-bold">Kund information</h4>
                <hr class="mt-1 mb-2" />
            </div>

            <div class="form-group mb-3">
                <label class="form-label">ID:</label>
                <input type="text" class="form-control" asp-for="Customer.StIsCustomerId" disabled>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Kundnamn:</label>
                <input type="text" class="form-control" asp-for="Customer.StIsCustomerName" disabled>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Status:</label>
                <select class="form-control" asp-for="Customer.Position" disabled>
                    <option value="1">Inaktiv</option>
                    <option value="2">Dold</option>
                    <option value="3">Aktiv</option>
                </select>
            </div>
            <div class="form-group mb-3">
                <label class="form-label">Status:</label>
                <select class="form-control" asp-for="Customer.StIsCustomerStatus" disabled>
                    <option value="1">Inaktiv</option>
                    <option value="2">Dold</option>
                    <option value="3">Aktiv</option>
                </select>
            </div>
        </div>
    </div>
</div>
