@page 
@model ADMIN.ITEGAMAX._4._0.Areas.database.Pages.SiteFaqQuestions.ViewModel
@{
    ViewData["Title"] = "st_faq_question_answers";
}
<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <h4 class="mb-0">Datatabell: @ViewData["Title"]</h4>
        <p class="mb-0 text-muted">Den här sidan används för att visa en Social Fråga och Svar.</p>
    </div>
    <p>
        <a asp-page="index" class="btn btn-success waves-effect waves-light">Tillbaka</a>
    </p>
</div>

<div class="col-xl-3 col-lg-7 w-100">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-column">
                <h4 class="mb-3 main-content-label fw-bold">Redigera Site FAQ Question</h4>
                <hr class="mt-1 mb-2" />
            </div>

            <!-- Faq Question Details -->
            <div class="form-group mb-3">
                <div class="row">
                    <div class="col-md-2 d-flex align-items-center">
                        <label class="form-label mb-0">Page ID:</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.stFaqQuestions!.StFaqQuesAnsId" disabled />
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <div class="row">
                    <div class="col-md-2 d-flex align-items-center">
                        <label class="form-label mb-0">Question:</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.stFaqQuestions!.StFaqQuestion" disabled />
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <div class="row">
                    <div class="col-md-2 d-flex align-items-center">
                        <label class="form-label mb-0">Answer:</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.stFaqQuestions!.StFaqAnswer" disabled />
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <div class="row">
                    <div class="col-md-2 d-flex align-items-center">
                        <label class="form-label mb-0">Category Id:</label>
                    </div>
                    <div class="col-md-10">
                        <input type="number" class="form-control" value="@Model.stFaqQuestions!.StFaqCategoryid" disabled />
                    </div>
                </div>
            </div>
@* 
            <div class="form-group mb-3">
                <div class="row">
                    <div class="col-md-2 d-flex align-items-center">
                        <label class="form-label mb-0">Question Status:</label>
                    </div>
                    <div class="col-md-10">
                        <input type="number" class="form-control" value="@Model.stFaqQuestions!.StFaqQuesAnsStatus" disabled />
                    </div>
                </div>
            </div> *@

            <div class="form-group mb-3">
                <div class="row">
                    <div class="col-md-2 d-flex align-items-center">
                        <label class="form-label mb-0">Status:</label>
                    </div>
                    <div class="col-md-10">
                        <select class="form-control" asp-for="@Model.stFaqQuestions!.StFaqQuesAnsStatus" disabled>
                            <option value="1">Inaktiv</option>
                            <option value="2">Dold</option>
                            <option value="3">Aktiv</option>
                        </select>
                        <span asp-validation-for="@Model.stFaqQuestions!.StFaqQuesAnsStatus" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- View Count -->
          

        </div>
    </div>
</div>
