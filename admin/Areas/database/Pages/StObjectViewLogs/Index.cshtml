@page
@model ADMIN.ITEGAMAX._4._0.Areas.database.Pages.StObjectViewLog.IndexModel
@{
    ViewData["Title"] = "st_object_view_log";
}

<!-- Page Header -->
<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <h4 class="mb-0">Datatabell: @ViewData["Title"]</h4>
        <p class="mb-0 text-muted">Denna sida innehåller alla rader i tabellen nedan</p>
    </div>
    <div class="main-dashboard-header-right">
        <div>
            <label class="fs-13 text-muted">Totalt antal</label>
            <h5 class="mb-0 fw-semibold">@Model.TotalItems</h5>
        </div>
    </div>
</div>

<!-- Database Table -->
<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-body">
                <a asp-page="./New" id="addRow" class="btn btn-primary mb-2  mb-1 p-2">Lägg till post</a>
                <div class="table-responsive">
                    <table id="datatable-basic" class="table border table-bordered text-nowrap w-100">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Objekt-ID</th>
                                <th>Typ</th>
                                <th>Skapad Datum</th>
                                <th class="th-center-45">Visa</th>
                                <th class="th-center-45">Redigera</th>
                                </tr>
                        </thead>
                        <tbody>
                            @if (Model.StObjectViewLogs != null && Model.StObjectViewLogs.Any())
                            {
                                @foreach (var log in Model.StObjectViewLogs)
                                {
                                    <tr>
                                        <td>@log.StObjVlId</td>
                                        <td>@log.StObjId</td>
                                        <td>@log.StObjType</td>
                                        <td>@log.StCreateddate?.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td class="text-center">
                                            <a role="button" class="ri-eye-line cursor-pointer" asp-page="./View" asp-route-id="@log.StObjVlId"></a>
                                        </td>
                                        <td class="text-center">
                                            <a role="button" class="ri-edit-box-line cursor-pointer" asp-page="./Edit" asp-route-id="@log.StObjVlId"></a>
                                       

                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted">Inga poster hittades.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

