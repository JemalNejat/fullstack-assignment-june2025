        <!-- hero slider -->
@{
    if (Model != null)
    {
        string imagespagedir = CLCustAppsettings.IMAGE_PAGES_PATH!;

        List<modSitePage> sitepages = Model;
        <div class="hero-section hs-2">
            <div class="hero-text-shape">
                <p>ITeGAMAX</p>
            </div>
            <div class="hero-slider owl-carousel owl-theme">
                @{
                    foreach (var item in sitepages)
                    {

                        string imapath = "";
                        if ((item.pagetopbannerpic != null) && (!String.IsNullOrEmpty(item.pagetopbannerpic)))
                        {
                            imapath = imagespagedir + "/" + item.pageurlid!.Replace("/", "") + "/" + item.pagetopbannerpic;
                        }
                        else
                        {
                            imapath = "~/assets/img/hero/slider-1.jpg";
                        }

                        <div class="hero-single" style="background: url(@Html.Raw(imapath))">
                            <div class="container">
                                <div class="row align-items-center">
                                    <div class="col-md-12 col-lg-7">
                                        <div class="hero-content">
                                            <h6 class="hero-sub-title" data-animation="fadeInUp" data-delay=".25s">
                                                Välkommen till
                                                ITeGAMAX!
                                            </h6>
                                            <h1 class="hero-title" data-animation="fadeInRight" data-delay=".50s">
                                                @item.pagetitle
                                            </h1>
                                            <p data-animation="fadeInLeft" data-delay=".75s">
                                                @item.pagesubtitle
                                            </p>
                                            <div class="hero-btn" data-animation="fadeInUp" data-delay="1s">
                                                <a href="@item.pageurlid" class="theme-btn theme-btn2">
                                                    Se vad vi erbjuder<i class="fas fa-arrow-right"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    }
}
<!-- hero slider end -->