@page
@model ADMIN.ITEGAMAX._4._0.Areas.database.Pages.SiteFaqQuestions.IndexModel
@{
    ViewData["Title"] = "st_site_faq_questions_answers";
}

<!-- Sidhuvud -->
<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <h4 class="mb-0">Datatabell: @ViewData["Title"]</h4>
        <p class="mb-0 text-muted">Denna sida innehåller alla rader i tabellen nedan</p>
    </div>
    <div class="main-dashboard-header-right">
        <div>
            <label class="fs-13 text-muted">Totalt antal</label>
            <h5 class="mb-0 fw-semibold">@Model.TotalItems</h5>
        </div>
    </div>
</div>
<!-- Slut på Sidhuvud -->

<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-body">
                <div class="table-responsive">
                    <a asp-page="./New" id="addRow" class="btn btn-primary mb-2 mb-1 p-2">Lägg till post</a>
                    <table id="datatable-basic" class="table table-bordered text-nowrap w-100">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Fråga</th>
                                <th>Svar</th>
                                <th>Kategori ID</th>
                                <th>Status</th>
                                <th class="th-center-45">Visa</th>
                                <th class="th-center-45">Redigera</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.AllPages)
                            {
                                <tr>
                                    <td>@item.StFaqQuesAnsId</td>
                                    <td>@item.StFaqQuestion</td>
                                    <td>
                                        <div class="answer-cell">
                                            @Html.Raw(@item.StFaqAnswer)
                                        </div>
                                    </td>
                                    <td>@item.StFaqCategoryid</td>
                                    <td>
                                        @{
                                            switch (item.StFaqQuesAnsStatus)
                                            {
                                                case 1:
                                                    <span class="fw-bold text-warning d-flex justify-content-center">
                                                        <i class="ri-close-circle-line me-1"></i> Inaktiv
                                                    </span>
                                                    break;
                                                case 2:
                                                    <span class="fw-bold text-danger d-flex justify-content-center">
                                                        <i class="ri-error-warning-line me-1"></i> Dold
                                                    </span>
                                                    break;
                                                case 3:
                                                    <span class="fw-bold text-success d-flex justify-content-center">
                                                        <i class="ri-check-line me-1"></i> Aktiv
                                                    </span>
                                                    break;
                                            }
                                        }
                                    </td>
                                   

                                    <td class="text-center">
                                        <a role="button" class="ri-eye-line cursor-pointer" asp-page="./View" asp-route-id="@item.StFaqQuesAnsId"></a>
                                    </td>
                                    <td class="text-center">
                                        <a role="button" class="ri-edit-box-line cursor-pointer" asp-page="./Edit" asp-route-id="@item.StFaqQuesAnsId"></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <style>
                    .answer-cell {
                        white-space: pre-wrap;
                        word-wrap: break-word;
                        padding: 10px;
                        max-width: 100%;
                        overflow-wrap: break-word;
                        background-color: #f4f4f4;
                        border: 1px solid #ddd;
                        max-height: 150px;
                        overflow-y: auto;
                    }
                </style>
            </div>
        </div>
    </div>
</div>
