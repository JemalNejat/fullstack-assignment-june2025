@page "{id:int}"
@model ADMIN.ITEGAMAX._4._0.Areas.database.Pages.SiteFaqQuestions.EditModel
@{
    ViewData["Title"] = "st_faq_question_answers";
}
<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <h4 class="mb-0">Datatabell: @ViewData["Title"]</h4>
        <p class="mb-0 text-muted">Den här sidan används för att redigera en Fråga och Svar.</p>
    </div>
    <p>
        <a asp-page="index" class="btn btn-success waves-effect waves-light">Tillbaka</a>
    </p>
</div>
<div class="col-xl-3 col-lg-7 w-100">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-column">
                <h4 class="mb-3 main-content-label fw-bold">Redigera FAq Fråga</h4>
                <hr class="mt-1 mb-2" />
            </div>
            <form class="form-horizontal" method="post">

                <!-- Hidden Fields -->
                <input asp-for="stFaqQuestions!.StFaqQuesAnsId" type="hidden" />
                <input asp-for="stFaqQuestions!.StFaqQuesAnsCreateddate" type="hidden" />
                <input asp-for="stFaqQuestions!.StFaqQuesAnsUpdateddate" type="hidden" value="@DateTime.Now" />
                <input asp-for="stFaqQuestions!.Viewcount" type="hidden" />

                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Question ID:</label>
                        </div>
                        <div class="col-md-10">
                            <input type="text" class="form-control" asp-for="stFaqQuestions!.StFaqQuesAnsId" readonly />
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Fråga:*</label>
                        </div>
                        <div class="col-md-10">
                          
                            <input type="text" asp-for="stFaqQuestions!.StFaqQuestion" class="form-control" />
                            <span asp-validation-for="stFaqQuestions!.StFaqQuestion" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Svar:*</label>
                        </div>
                        <div class="col-md-10">
                           
                            <input type="text" asp-for="stFaqQuestions!.StFaqAnswer" class="form-control" />
                            <span asp-validation-for="stFaqQuestions!.StFaqAnswer" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Category ID:</label>
                        </div>
                        <div class="col-md-10">
                          
                            <input type="number" asp-for="stFaqQuestions!.StFaqCategoryid" class="form-control" required min="1" max="6" />
                            <span asp-validation-for="stFaqQuestions!.StFaqCategoryid" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-md-2 d-flex align-items-center">
                            <label class="form-label mb-0">Status:</label>
                        </div>
                        <div class="col-md-10">
                            <select class="form-control" asp-for="stFaqQuestions.StFaqQuesAnsStatus" required>
                                <option value="1">Inaktiv</option>
                                <option value="2">Dold</option>
                                <option value="3">Aktiv</option>
                            </select>
                            <span asp-validation-for="stFaqQuestions.StFaqQuesAnsStatus" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card-footer pb-0">
                    <input type="submit" class="btn btn-primary waves-effect waves-light" value="Edit" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}