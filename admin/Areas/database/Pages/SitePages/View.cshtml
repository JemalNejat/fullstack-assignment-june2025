@page
@model ADMIN.ITEGAMAX._4._0.Areas.database.Pages.SitePages.ViewModel
@{
    ViewData["Title"] = "st_pages";

    string imagepath = CLCustAppsettings.IMAGE_SERVICES_PATH  + Model.ViewPage.Pageurlid.Replace("/", "") + "/";
}
<!-- Page Header -->
<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <h4 class="mb-0">Sidans innehåll: @Model.ViewPage.Pagetitle</h4>
        <p class="mb-0 text-muted">Den här sidan används för att visa en webbsida.</p>
    </div>
    <div class="main-dashboard-header-right col-xl-3 col-lg-7 w-50">
        <div>
            <label class="fs-13 text-muted">Antal Visningar:</label>
            <div class="main-star">
                <span>(@Model.ViewPage.Viewcount)</span>
            </div>
        </div>
        <div>
            <label class="fs-13 text-muted">Updaterade</label>
            <h6 class="mb-0 fw-semibold">@(!string.IsNullOrEmpty(Model.ViewPage.Pageupdateddate.ToString()) ? Model.ViewPage.Pageupdateddate.ToString()!.Substring(0, 10) : "")</h6>
        </div>
        <div>
            <label class="fs-13 text-muted">Skapade</label>
            <h6 class="mb-0 fw-semibold">@(!string.IsNullOrEmpty(Model.ViewPage.Pagecreateddate.ToString())? Model.ViewPage.Pagecreateddate.ToString()!.Substring(0, 10) : "")</h6>
        </div>
    </div>
</div>

<div class="col-xl-3 col-lg-7 w-100">
    <div class="card">
        <div class="card-body">
         
                
               
            <div class="d-flex gap-2 mb-3">
                <button type="button" class="btn btn-primary" onclick="window.location.href='/database/sitepages'">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list-columns-reverse" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M0 .5A.5.5 0 0 1 .5 0h2a.5.5 0 0 1 0 1h-2A.5.5 0 0 1 0 .5m4 0a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10A.5.5 0 0 1 4 .5m-4 2A.5.5 0 0 1 .5 2h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 4h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 6h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1h-8a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 8h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1h-8a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5" />
                    </svg>
                    Till listan
                </button>

                <button type="button" class="btn btn-purple" onclick="window.location.href='/database/SitePages/Edit?id=@Model.ViewPage.PageId'">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                    </svg>
                    Redigera sidan
                </button>

                <button type="button" class="btn btn-success" onclick="window.location.href='/database/SitePages/addarticle?id=@Model.ViewPage.PageId'">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus" viewBox="0 0 16 16">
                        <path d="M8 6.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 .5-.5" />
                        <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5z" />
                    </svg>
                    Lägg till artiklar
                </button>

                <button type="button" class="btn btn-success" onclick="window.location.href='/database/SitePages/addimage?id=@Model.ViewPage.PageId'">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-image-fill" viewBox="0 0 16 16">
                        <path d="M.002 3a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-12a2 2 0 0 1-2-2zm1 9v1a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V9.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062zm5-6.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0"></path>
                    </svg>
                    Lägg till bilder
                </button>

                <button type="button" class="btn btn-outline-danger" onclick="window.location.href='/database/SitePages/deletearticle?id=@Model.ViewPage.PageId'">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus" viewBox="0 0 16 16">
                        <path d="M8 6.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 .5-.5" />
                        <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5z" />
                    </svg>
                    Ta bort artiklar
                </button>

                <button type="button" class="btn btn-outline-danger" onclick="window.location.href='/database/SitePages/deleteimage?id=@Model.ViewPage.PageId'">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-image-fill" viewBox="0 0 16 16">
                        <path d="M.002 3a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-12a2 2 0 0 1-2-2zm1 9v1a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V9.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062zm5-6.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0"></path>
                    </svg>
                    Ta bort bild
                </button>
            </div>


                <hr class="mt-1 mb-2" />

           

            <div class="row">
                <div class="col-xl-3 col-lg-7 w-50">
                    <div class="form-group mb-3">
                        <div class="row">
                            <div class="col-md-2 d-flex align-items-center">
                                <label class="form-label mb-0">Sida ID:</label>
                            </div>
                            <div class="col-md-10">

                                <label class="form-label mb-0">@Model.ViewPage.PageId</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="row">
                            <div class="col-md-2 d-flex align-items-center">
                                <label class="form-label mb-0">Titel:</label>
                            </div>
                            <div class="col-md-10">
                                <label class="form-label mb-0">@Model.ViewPage.Pagetitle</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="row">
                            <div class="col-md-2 d-flex align-items-center">
                                <label class="form-label mb-0">Kortbeskrivning:</label>
                            </div>
                            <div class="col-md-10">
                                <label class="form-label mb-0">@Model.ViewPage.Pageshortdescription</label>
                            </div>
                        </div>
                    </div>

                     <div class="form-group mb-3">
                        <div class="row">
                            <div class="col-md-2 d-flex align-items-center">
                                <label class="form-label mb-0">Subtitel:</label>
                            </div>
                            <div class="col-md-10">
                                <label class="form-label mb-0">@Model.ViewPage.Pagesubtitle</label>
                            </div>
                        </div>
                    </div>

                    <hr />
                    <div class="form-group mb-3">
                        <div class="row">
                            <div class="col-md-2 d-flex align-items-center">
                                <label class="form-label mb-0">Område:</label>
                            </div>
                            <div class="col-md-10">
                                <label class="form-label mb-0">@Model.ViewPage.Pagemenuarea</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="row">
                            <div class="col-md-2 d-flex align-items-center">
                                <label class="form-label mb-0">URL-sökväg:</label>
                            </div>
                            <div class="col-md-10">
                                <label class="form-label mb-0">@Model.ViewPage.Pageurlid</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="row">
                            <div class="col-md-2 d-flex align-items-center">
                                <label class="form-label mb-0">Typ:</label>
                            </div>
                            <div class="col-md-10">
                                <label class="form-label mb-0">@Model.ViewPage.Pagetype</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="row">
                            <div class="col-md-2 d-flex align-items-center">
                                <label class="form-label mb-0">Layout:</label>
                            </div>
                            <div class="col-md-10">
                                <label class="form-label mb-0">@Model.ViewPage.Pagelayoutname</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="row">
                            <div class="col-md-2 d-flex align-items-center">
                                <label class="form-label mb-0">Kategori:</label>
                            </div>
                            <div class="col-md-10">
                                <label class="form-label mb-0">@Model.ViewPage.Pagecategoryid</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="row">
                            <div class="col-md-2 d-flex align-items-center">
                                <label class="form-label mb-0">Status:</label>
                            </div>
                            <div class="col-md-10">
                                <select class="form-control" disabled>
                                    <option value="1" selected="@(Model.ViewPage.Pagestatus == 1)">Inaktiv</option>
                                    <option value="2" selected="@(Model.ViewPage.Pagestatus == 2)">Dold</option>
                                    <option value="3" selected="@(Model.ViewPage.Pagestatus == 3)">Aktiv</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group mb-3">
                        <div class="row">
                            <div class="col-md-2 d-flex align-items-center">
                                <label class="form-label mb-0">Antal visningar:</label>
                            </div>
                            <div class="col-md-10">
                                <label class="form-label mb-0">@Model.ViewPage.Viewcount</label>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group mb-3">
                        <div class="row">
                            <div class="col-md-2 d-flex align-items-center">
                                <label class="form-label mb-0">Skapade:</label>
                            </div>
                            <div class="col-md-10">
                                <label class="form-label mb-0">@Model.ViewPage.Pagecreateddate</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <div class="row">
                            <div class="col-md-2 d-flex align-items-center">
                                <label class="form-label mb-0">Ändrade:</label>
                            </div>
                            <div class="col-md-10">
                                <label class="form-label mb-0">@Model.ViewPage.Pagemodifieddate</label>
                            </div>
                        </div>
                    </div>
                    <hr />
                </div>
                <div class="col-xl-3 col-lg-7 w-50">
                    <h5>Sidbilder</h5>
                    @{
                        if (!String.IsNullOrEmpty(Model.ViewPage.Pagetopbannerpic))
                        {
                          <div class="col-xl-12">
                        <div class="card custom-card card-img-top-1">
                           <img class="card-img-top w-100 w-100" src="@imagepath@Model.ViewPage.Pagetopbannerpic" alt="">
                            <div class="card-body pb-0">
                                        @if (!String.IsNullOrEmpty(Model.ViewPage.Pagetopbannertitle))
                                        {
                                            <h4>@Model.ViewPage.Pagetopbannertitle</h4>
                                        }
                                        @if (!String.IsNullOrEmpty(Model.ViewPage.Pagetopbannersubtitle))
                                        {
                                            <h6>@Model.ViewPage.Pagetopbannersubtitle</h6>
                                        }
                                        @if (!String.IsNullOrEmpty(Model.ViewPage.Pagetopbannertext))
                                        {
                                            <p class="card-text mb-2">@Model.ViewPage.Pagetopbannertext</p>
                                        }                    
                            </div>
                            <div class="item7-card-desc d-flex p-3 align-items-center justify-content-center border-top">

                                        <div class="fs-4 mb-3">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-image-fill" viewBox="0 0 16 16">
                                                <path d="M.002 3a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-12a2 2 0 0 1-2-2zm1 9v1a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V9.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062zm5-6.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0"></path>
                                            </svg>
                                            Breadcrumb - Large (1920x1280px)
                                        </div>
                            </div>
                        </div>
                    </div>   
                        }
                    }

                    @{
                        if (!String.IsNullOrEmpty(Model.ViewPage.Pagemediumbannerpic))
                        {
                            <div class="col-xl-12">
                                <div class="card custom-card card-img-top-1">
                                    <img class="card-img-top w-100 w-100" src="@imagepath@Model.ViewPage.Pagemediumbannerpic" alt="">
                                    <div class="card-body pb-0">
                                        @if (!String.IsNullOrEmpty(Model.ViewPage.Pagemediumbannertitle))
                                        {
                                            <h4>@Model.ViewPage.Pagemediumbannertitle</h4>
                                        }
                                        @if (!String.IsNullOrEmpty(Model.ViewPage.Pagemediumbannersubtitle))
                                        {
                                            <h6>@Model.ViewPage.Pagemediumbannersubtitle</h6>
                                        }
                                        @if (!String.IsNullOrEmpty(Model.ViewPage.Pagemediumbannertext))
                                        {
                                            <p class="card-text mb-2">@Model.ViewPage.Pagemediumbannertext</p>
                                        }
                                    </div>
                                    <div class="item7-card-desc d-flex p-3 align-items-center justify-content-center border-top">

                                        <div class="fs-4 mb-3">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-image-fill" viewBox="0 0 16 16">
                                                <path d="M.002 3a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-12a2 2 0 0 1-2-2zm1 9v1a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V9.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062zm5-6.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0"></path>
                                            </svg>
                                            Page - Medium (900x600px)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                    @{
                        if (!String.IsNullOrEmpty(Model.ViewPage.Pagesmallbannerpic))
                        {
                            <div class="col-xl-12">
                                <div class="card custom-card card-img-top-1">
                                    <img class="card-img-top w-100 w-100" src="@imagepath@Model.ViewPage.Pagesmallbannerpic" alt="">
                                    <div class="card-body pb-0">
                                        @if (!String.IsNullOrEmpty(Model.ViewPage.Pagesmallbannertitle))
                                        {
                                            <h4>@Model.ViewPage.Pagesmallbannertitle</h4>
                                        }
                                        @if (!String.IsNullOrEmpty(Model.ViewPage.Pagesmallbannersubtitle))
                                        {
                                            <h6>@Model.ViewPage.Pagesmallbannersubtitle</h6>
                                        }
                                        @if (!String.IsNullOrEmpty(Model.ViewPage.Pagesmallbannertext))
                                        {
                                            <p class="card-text mb-2">@Model.ViewPage.Pagesmallbannertext</p>
                                        }
                                    </div>
                                    <div class="item7-card-desc d-flex p-3 align-items-center justify-content-center border-top">

                                        <div class="fs-4 mb-3">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-image-fill" viewBox="0 0 16 16">
                                                <path d="M.002 3a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-12a2 2 0 0 1-2-2zm1 9v1a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V9.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062zm5-6.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0"></path>
                                            </svg>
                                            List Pages - Small (600x400)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>