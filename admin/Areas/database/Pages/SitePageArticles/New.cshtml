@page
@model ADMIN.ITEGAMAX._4._0.Areas.database.Pages.SitePageArticles.NewModel
@{
    ViewData["Title"] = "st_page_articles";
}

<!-- Page Header -->
<div class="d-md-flex d-block align-items-center justify-content-between my-2 page-header-breadcrumb">
    <div>
        <h4 class="mb-0">Redigera sida: @ViewData["Title"]</h4>
        <p class="mb-0 text-muted">Den här sidan används för att skapa en ny artikel.</p>
    </div>
    <div class="main-dashboard-header-right col-xl-3 col-lg-7 w-50">
        <div>
            <label class="fs-13 text-muted">Antal Visningar:</label>
            <div class="main-star">
                <span>(@Model.StPageArticle.Viewcount)</span>
            </div>
        </div>
        <div>
            <label class="fs-13 text-muted">Updaterade</label>
            <h6 class="mb-0 fw-semibold">@(!string.IsNullOrEmpty(Model.StPageArticle.Articleupdatedate.ToString()) ? Model.StPageArticle.Articleupdatedate.ToString()!.Substring(0, 10) : "")</h6>
        </div>
        <div>
            <label class="fs-13 text-muted">Skapade</label>
            <h6 class="mb-0 fw-semibold">@(!string.IsNullOrEmpty(Model.StPageArticle.Articlecreateddate.ToString()) ? Model.StPageArticle.Articlecreateddate.ToString()!.Substring(0, 10) : "")</h6>
        </div>
    </div>
</div>

<div class="col-xl-3 col-lg-7 w-100">
    <div class="card">
        <div class="card-body">
            <div class="d-flex gap-2 mb-3">
                <button type="button" class="btn btn-primary" onclick="window.location.href='/database/SitePageArticles'">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list-columns-reverse" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M0 .5A.5.5 0 0 1 .5 0h2a.5.5 0 0 1 0 1h-2A.5.5 0 0 1 0 .5m4 0a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10A.5.5 0 0 1 4 .5m-4 2A.5.5 0 0 1 .5 2h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 4h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 6h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1h-8a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 8h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1h-8a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5" />
                    </svg>
                    Till listan
                </button>
            </div>
            <hr class="mt-1 mb-2" />
            <div class="row">
                <div class="col-xl-3 col-lg-7 w-50">
                    <div class="mb-4 mt-3 main-content-label">Artikelinformation</div>
                    <form class="form-horizontal" method="post">
                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">Titel:</label>
                                </div>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" asp-for="StPageArticle.Articletitle" placeholder="Ange titel">
                                    <span asp-validation-for="StPageArticle.Articletitle" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">Underrubrik:</label>
                                </div>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" asp-for="StPageArticle.Articlesubtitle" placeholder="Ange underrubrik">
                                    <span asp-validation-for="StPageArticle.Articlesubtitle" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">Artikeltext:</label>
                                </div>
                                <div class="col-md-10">
                                    <input asp-for="StPageArticle.Articletext" id="ArticletitleE" type="hidden" />
                                    <trix-editor input="ArticletitleE"></trix-editor>
                                    <span asp-validation-for="StPageArticle.Articletext" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">Sida ID:</label>
                                </div>
                                <div class="col-md-10">
                                    <select class="form-control" asp-for="StPageArticle.StPageId" required>
                                        <option value="">-- Välj Sida --</option>
                                        @foreach (var Stpage in Model.StPages)
                                        {
                                            <option value="@Stpage.PageId">@Stpage.PageId</option>
                                        }
                                    </select>
                                    <span asp-validation-for="StPageArticle.StPageId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">Status:</label>
                                </div>
                                <div class="col-md-10">
                                    <select class="form-control" asp-for="StPageArticle.ArticlestStatus" required>
                                        <option value="1">Inaktiv</option>
                                        <option value="2">Dold</option>
                                        <option value="3" selected>Aktiv</option>
                                    </select>
                                    <span asp-validation-for="StPageArticle.ArticlestStatus" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4 mt-5 main-content-label">Länkinställningar</div>

                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">Länk Titel:</label>
                                </div>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" asp-for="StPageArticle.ArticlePictureLinktitle" placeholder="Ange länk titel">
                                    <span asp-validation-for="StPageArticle.ArticlePictureLinktitle" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">Länk URL:</label>
                                </div>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" asp-for="StPageArticle.ArticlePictureLinkurl" placeholder="Ange länk URL">
                                    <span asp-validation-for="StPageArticle.ArticlePictureLinkurl" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">Länkmål:</label>
                                </div>
                                <div class="col-md-10">
                                    <select class="form-control" asp-for="StPageArticle.ArticlePictureLinktarget">
                                        <option value="_self">Samma fönster</option>
                                        <option value="_blank">Nytt fönster</option>
                                    </select>
                                    <span asp-validation-for="StPageArticle.ArticlePictureLinktarget" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="row">
                                <div class="col-md-2 d-flex align-items-center">
                                    <label class="form-label mb-0">Artikelposition:</label>
                                </div>
                                <div class="col-md-10">
                                    <input type="number" class="form-control" asp-for="StPageArticle.ArticlePosition" required min="1">
                                    <span asp-validation-for="StPageArticle.ArticlePosition" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Hidden -->
                        <input asp-for="StPageArticle.Articlecreateddate" type="hidden" value="@DateTime.Now" />
                        <input asp-for="StPageArticle.Articleupdatedate" type="hidden" value="@DateTime.Now" />

                        <div class="card-footer pb-0 d-flex">
                            <input type="submit" class="btn btn-primary waves-effect waves-light" style="min-width: 160px;" value="Redigera ändringar" />
                            <input type="button" class="btn btn-secondary ms-4 waves-effect waves-light" style="min-width: 160px;" value="Avbryt" onclick="window.location.href='/database/sitepagearticles'" />
                        </div>
                    </form>
                </div>

                <div class="col-xl-3 col-lg-7 w-50">
                    <form method="post" name="UploadImage" enctype="multipart/form-data">

                        <div class="mb-2 mt-3 main-content-label">Artikelbild</div>

                        <!-- Ladda upp ny bild -->
                        <div class="row dropzone p-2">
                            <div class="col-xl-12">
                                <div class="card custom-card">
                                    <div class="card-header">
                                        <div class="card-title">
                                            Select a PNG or JPEG image, having maximum size 500KB
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <input type="file" class="multiple-filepond" name="filepond" data-allow-reorder="true" data-max-file-size="500KB" data-max-files="1">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <div class="d-flex align-items-center gap-2">
                                    <label class="form-label mb-0">Bildjustering:</label>
                                    <select class="form-control" asp-for="StPageArticle.ArticlePictureAlign">
                                        <option value="left">Vänster</option>
                                        <option value="right">Höger</option>
                                        <option value="center">Mitten</option>
                                    </select>
                                </div>
                                <span asp-validation-for="StPageArticle.ArticlePictureAlign" class="text-danger"></span>
                            </div>
                        </div>
                        <button class="btn btn-primary waves-effect waves-light mt-2" name="upload-button" type="submit" value="Upload!">Ladda upp bild</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
